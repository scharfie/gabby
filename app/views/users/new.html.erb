<div id="login">
<h2><%= link_to 'Login', login_url %> or Sign up</h2>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<table>
  <tr><td class="info"><label for="login">Login:</label></td>
    <td><%= f.text_field :login %></td>
  </tr>  

  <tr><td class="info"><label for="password">Password:</label></td>
    <td><%= f.password_field :password %></td>
  </tr>  

  <tr><td class="info"><label for="password_confirmation">Confirm:</label></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>  

<!-- <p><label for="email">Email</label><br/>
<%= f.text_field :email %></p> -->

<!-- <p><label for="first_name">First name</label><br/>
<%= f.text_field :first_name %></p>

<p><label for="last_name">Last name</label><br/>
<%= f.text_field :last_name %></p> -->

  <tr class="actions"><td class="info"></td><td><%= submit_tag 'Sign up' %></td></tr>
<% end -%>

</div>