<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <title>gabby</title>
  <%= javascript_include_tag 'prototype', :juggernaut %>
  <%= stylesheet_link_tag 'base' %>
</head>
<body>
<div id="container">
  <div id="header">
    <div class="app">
      <table>
        <tr>
          <td class="appname">gabby</td>
          <td class="slogan">go ahead, run your mouth</td>
        </tr>
      </table>    
    </div>
    <div class="session">
    <% if logged_in? %>
      Logged in as: <%= current_user.login  %>
      <%= link_to 'Logout', logout_url %>
    <% end %>
    </div>  
  </div>  
  <div id="body">
    <%= yield %>
  </div>
  <div id="sidebar">
    
  </div>
  <div id="footer">
    
  </div>
</div>  
</body>
</html>